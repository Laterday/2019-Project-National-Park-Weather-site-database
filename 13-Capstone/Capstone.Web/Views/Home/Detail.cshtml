<body>
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-12">
                    <div class="single-about-txt">
                        <h2>@Model.Park.ParkName</h2>
                        <p>
                            <span>@Model.Park.ParkDescription.Substring(0, 1)</span>@Model.Park.ParkDescription.Substring(1)
                        </p>
                        <p>
                            @Model.Park.InspirationalQuote  
                        </p>

                        <p id="quote">- @Model.Park.InspirationalQuoteSource</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="about-overlay">
            <img class="img-detail" src="~/img/parks/@(Model.Park.ParkCode).jpg">
        </div>
    </section>

    <section id="about-2" class="about-2">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="single-about-txt-2">
                        <h4>Other Details</h4>

                        <ul class="ul-1">
                            <li>@Model.Park.Climate</li>
                            <li>@Model.Park.MilesOfTrail.ToString("#,###")</li>
                            <li>@Model.Park.NumberOfCampsites.ToString("#,###")</li>
                            <li>@Model.Park.EntryFee.ToString("C2")</li>
                        </ul>

                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="single-about-txt">
                        <h2>Interesting Facts</h2>   @*Change title*@
                        <ul class="ul-2">
                            <li>@Model.Park.YearFounded</li>
                            <li>@Model.Park.AnnualVisitorCount.ToString("#,###")</li>
                            <li>@Model.Park.NumberOfAnimalSpecies.ToString("#,###")</li>
                            <li>@Model.Park.Acreage.ToString("#,###")</li>
                            <li>@Model.Park.ElevationInFeet.ToString("#,###")</li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>
        <div class="about-overlay-2"></div>
    </section>



</body>
