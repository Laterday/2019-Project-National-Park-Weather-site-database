@model Capstone.Web.Models.ParkWeather

@{
    ViewData["Title"] = Model.Park.ParkName;
}


<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <style>
        .single-about-txt > h2 {
            width: 40%;
        }

        .navbar-nav {
            position: relative;
            left: 70%;
        }

        .container > a {
            display: none;
        }

        .about-overlay > img {
            margin-top: 100px;
        }

        .about-2{
            max-height: 62%;
        }

        .ul-1 > li {
            color: white;
        }

        .img-detail {
            padding-top: 20%;
            width: 120%;
            padding-left: 10%;
        }

        .text-car3{
            padding-bottom: 8px;
        }

        #car1 {
            text-align: center;
        }

        #quote {
            margin: 0;
            text-indent: 20em;
            font-style: italic;
        }

        .ul-1 > li {
            padding-bottom: 20px;
        }

        .ul-2 > li {
            
            padding-bottom: 15px;
            padding-left: 50px;
        }

        .span-bold {
            font-weight: bold;
        }

        .ul-2 {
            padding-bottom: 8px;
        }

        .single-featured-box-overlay > ul > li {
            font-size: 14px;
        }

        .single-featured-box {
            position: relative;
            width: 100%;
        }

        .image {
            display: block;
            width: 100%;
            height: auto;
        }

        .container-overlay {
            position: absolute;
            bottom: 100%;
            left: 0;
            right: 0;
            background: rgba(255, 255, 255, .8);
            overflow: hidden;
            width: 100%;
            height: 0;
            transition: .5s ease;
        }

        .single-featured-box:hover .container-overlay {
            bottom: 90%;
            height: 10%;
        }

        form {
            float: left;
            padding-right: 25px;
        }

        .cold-text {
            color: deepskyblue;
            font-weight: bold;
        }

        .warm-text {
            color: orangered;
            font-weight: bold;
        }

        .text-car2 {
            padding: 0px 35px 0px 35px;
        }

        .quote-main {
            font-style: italic;
            font-weight: bold;
        }

        #quote1 {
            font-weight: bold;
            font-size: 16px !important;
        }

        #otherDetails {
            font-weight: bold;
            font-size: 22px;
        }
    </style>
</head>
<body>
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-xl-6 col-lg-12">
                    <div class="single-about-txt">
                        <h2>@Model.Park.ParkName</h2>
                        <p>
                            <span>@Model.Park.ParkDescription.Substring(0, 1)</span>@Model.Park.ParkDescription.Substring(1)
                        </p>
                        <p class="quote-main">
                            <span id="quote1">"@Model.Park.InspirationalQuote"</span>
                        </p>

                        <p id="quote">- @Model.Park.InspirationalQuoteSource</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="about-overlay">
            <img class="img-detail" src="~/img/parks/@(Model.Park.ParkCode).jpg">
        </div>
    </section>

    <section id="about-2" class="about-2">
        <div class="container">
            <div class="row">
                <div class="col-lg-7">
                    <div class="single-about-txt-2">
                        <h4><span id="otherDetails">Other Details</span></h4>

                        <ul class="ul-1">
                            <li>@Model.Park.Climate Climate</li>

                            <li>@Model.Park.ParkName has over @Model.Park.MilesOfTrail.ToString("#,###") miles of trails</li>

                            @if (Model.Park.NumberOfCampsites > 0)
                            {
                                <li>There are @Model.Park.NumberOfCampsites.ToString("#,###") campsites</li>

                            }
                            @if (Model.Park.EntryFee == 0)
                            {
                                <li>There is no entry fee</li>
                            }
                            else
                            {
                                <li>The entry fee is @Model.Park.EntryFee.ToString("C2")</li>
                            }


                        </ul>

                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="single-about-txt">
                        <h2>Interesting Facts</h2>   @*Change title*@
                        <ul class="ul-2">
                            <li>Founded in <span class="span-bold">@Model.Park.YearFounded</span></li>
                            <li>We host <span class="span-bold">@Model.Park.AnnualVisitorCount.ToString("#,###")</span> Annual visitors </li>
                            <li><span class="span-bold">@Model.Park.NumberOfAnimalSpecies.ToString("#,###")</span> Unique animal species</li>
                            <li><span class="span-bold">@Model.Park.Acreage.ToString("#,###")</span> Acres of wilderness</li>
                            @if (Model.Park.ElevationInFeet != 0)
                            {
                                <li><span class="span-bold">@Model.Park.ElevationInFeet.ToString("#,###")</span> feet of elevation</li>
                            }

                        </ul>
                        <form asp-controller="Home" asp-action="ConvertTemperature" method="get">
                            <button class="btn welcome-btn gallery-btn" name="parkCode" type="submit" value="@Model.ParkCode">Temp Conversion</button>
                        </form>
                        <form asp-controller="Survey" asp-action="Submit" method="get">
                            <button class="btn welcome-btn gallery-btn">Daily Survey</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="about-overlay-2"></div>
    </section>

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active" id="car1">

                <div>
                    <div class="featured-txt">
                        <div class="row" id="car1">
                            <div class="col-xs-4" id="car1">
                                <div class="single-featured-box" id="car1">
                                    <img src="~/img/weather/@(Model.WeatherList[0].PictureName).png" class="img-responsive-center-block" alt="featured-images">
                                    <div class="container-overlay">
                                        <h2>@Model.WeatherList[0].ForecastDayOfWeek</h2>
                                    </div>
                                    <div class="single-featured-box-overlay">
                                        <ul>
                                            @if (ViewBag.TempUnit == "Celsius")
                                            {
                                                <li class="text-car2">High <span class="warm-text">@Weather.FarenheitToCelsius(Model.WeatherList[0].High)</span>°C</li>
                                                <li class="text-car3">Low <span class="cold-text">@Weather.FarenheitToCelsius(Model.WeatherList[0].Low)</span>°C</li>

                                            }
                                            else
                                            {
                                                <li class="text-car2">High <span class="warm-text">@Model.WeatherList[0].High</span>°F</li>
                                                <li class="text-car3">Low <span class="cold-text">@Model.WeatherList[0].Low</span>°F</li>
                                            }
                                            <li class="text-car2">@Model.WeatherList[0].Recommendation</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xs-4" id="car1">
                                <div class="single-featured-box" id="car1">
                                    <img src="~/img/weather/@(Model.WeatherList[1].PictureName).png" class="img-responsive-center-block" alt="featured-images">
                                    <div class="container-overlay">
                                        <h2>@Model.WeatherList[1].ForecastDayOfWeek</h2>
                                    </div>
                                    <div class="single-featured-box-overlay">
                                        <ul>
                                            @if (ViewBag.TempUnit == "Celsius")
                                            {
                                                <li class="text-car2">High <span class="warm-text">@Weather.FarenheitToCelsius(Model.WeatherList[1].High)</span>°C</li>
                                                <li class="text-car3">Low <span class="cold-text">@Weather.FarenheitToCelsius(Model.WeatherList[1].Low)</span>°C</li>
                                            }
                                            else
                                            {
                                                <li class="text-car2">High <span class="warm-text">@Model.WeatherList[1].High</span>°F</li>
                                                <li class="text-car3">Low <span class="cold-text">@Model.WeatherList[1].Low</span>°F</li>
                                            }
                                            <li class="text-car2">@Model.WeatherList[1].Recommendation</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-4" id="car1">
                                <div class="single-featured-box" id="car1">
                                    <img src="~/img/weather/@(Model.WeatherList[2].PictureName).png" alt="featured-images">
                                    <div class="container-overlay">
                                        <h2>@Model.WeatherList[2].ForecastDayOfWeek</h2>
                                    </div>
                                    <div class="single-featured-box-overlay">
                                        <ul>
                                            @if (ViewBag.TempUnit == "Celsius")
                                            {
                                                <li class="text-car2">High <span class="warm-text">@Weather.FarenheitToCelsius(Model.WeatherList[2].High)</span>°C</li>
                                                <li class="text-car3">Low <span class="cold-text">@Weather.FarenheitToCelsius(Model.WeatherList[2].Low)</span>°C</li>
                                            }
                                            else
                                            {
                                                <li class="text-car2">High <span class="warm-text">@Model.WeatherList[2].High</span>°F</li>
                                                <li class="text-car3">Low <span class="cold-text">@Model.WeatherList[2].Low</span>°F</li>
                                            }
                                            <li class="text-car2">@Model.WeatherList[2].Recommendation</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item" id="car1">
                <div class="featured-txt">
                    <div class="row" id="car1">
                        <div class="col-xs-6" id="car1">
                            <div class="single-featured-box" id="car1">
                                <img src="~/img/weather/@(Model.WeatherList[3].PictureName).png" alt="featured-images">
                                <div class="container-overlay">
                                    <h2>@Model.WeatherList[3].ForecastDayOfWeek</h2>
                                </div>
                                <div class="single-featured-box-overlay">
                                    <ul>
                                        @if (ViewBag.TempUnit == "Celsius")
                                        {
                                            <li class="text-car2">High <span class="warm-text">@Weather.FarenheitToCelsius(Model.WeatherList[3].High)</span>°C</li>
                                            <li class="text-car3">Low <span class="cold-text">@Weather.FarenheitToCelsius(Model.WeatherList[3].Low)</span>°C</li>
                                        }
                                        else
                                        {
                                            <li class="text-car2">High <span class="warm-text">@Model.WeatherList[3].High</span>°F</li>
                                            <li class="text-car3">Low <span class="cold-text">@Model.WeatherList[3].Low</span>°F</li>
                                        }
                                        <li class="text-car2">@Model.WeatherList[3].Recommendation</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-6" id="car1">
                            <div class="single-featured-box" id="car1">
                                <img src="~/img/weather/@(Model.WeatherList[4].PictureName).png" alt="featured-images">
                                <div class="container-overlay">
                                    <h2>@Model.WeatherList[4].ForecastDayOfWeek</h2>
                                </div>
                                <div class="single-featured-box-overlay">
                                    <ul>
                                        @if (ViewBag.TempUnit == "Celsius")
                                        {
                                            <li class="text-car2">High <span class="warm-text">@Weather.FarenheitToCelsius(Model.WeatherList[4].High)</span>°C</li>
                                            <li class="text-car3">Low <span class="cold-text">@Weather.FarenheitToCelsius(Model.WeatherList[4].Low)</span>°C</li>
                                        }
                                        else
                                        {
                                            <li class="text-car2">High <span class="warm-text">@Model.WeatherList[4].High</span>°F</li>
                                            <li class="text-car3">Low <span class="cold-text">@Model.WeatherList[4].Low</span>°F</li>
                                        }
                                        <li class="text-car2">@Model.WeatherList[4].Recommendation</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</body>
</html>


