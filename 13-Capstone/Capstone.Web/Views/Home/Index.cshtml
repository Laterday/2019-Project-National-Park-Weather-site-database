@model List<Park>

@{
    ViewData["Title"] = "Index";
    Random rnd = new Random();
}

<!doctype html>
<html class="no-js" lang="en">
<head>

    <title>National Park Weather Service</title>
    <style>

        #test1 {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .img-item > img {
            height: 600px;
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
        }

        .overlay-discription {
            color: white;
            font-size: 10px;
            padding: 15px;
            text-indent: 10%;
        }

        .img-item-overlay {
            background-color: rgba(0,0,0,0.5);
            box-shadow: 5px 10px;
        }

        .img-item {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
            border-radius: 0.5%;
        }
    </style>
</head>
<body>

    <img src="~/img/landscapes-mountains-water-nature-wallpapers-hd-live.jpg" />

    <form action="/Home/Detail" method="get">
        <button name="parkCode" type="submit" value="@Model[1].ParkCode">Save and exit</button>
    </form>

    <form action="/action_page.php" method="get">
        Choose your favorite subject:
        <button name="subject" type="submit" value="fav_HTML">HTML</button>
        <button name="subject" type="submit" value="fav_CSS">CSS</button>
    </form>

    <input type="button" value="Detail" onclick="location.href='@Url.Action("Detail", "Home")?id=' + document.getElementById('@Model[1].ParkCode').value" />

    <section class="gallery">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-12">
                    <div class="single-gallery-box">

                        @for (int i = 0; i < Model.Count; i++)
                        {
                            if (i % 2 == 0)
                            {
                                <div class="img-item">
                                    <img src="~/img/parks/@(Model[i].ParkCode).jpg" alt="images">
                                    <div class="img-item-overlay d-flex flex-column justify-content-center align-items-center">
                                        <h3><a asp-controller="Home" asp-action="Detail" asp-route-parkCode="@Model[i].ParkCode">@Model[i].ParkName</a></h3>
                                        <p class="overlay-discription">@Model[i].ParkDescription</p>
                                        <form asp-action="Detail" asp-controller="Home" method="get" asp-route-parkCode="@Model[i].ParkCode">
                                            <button class="btn welcome-btn gallery-btn">view details</button>
                                            <input type="submit" value="Create" class="btn btn-default" />
                                        </form>

                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
                <div class="col-md-6 col-12">
                    <div class="single-gallery-box">
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            if (i % 2 != 0)
                            {
                                <div class="img-item">
                                    <img src="~/img/parks/@(Model[i].ParkCode).jpg" alt="images">
                                    <div class="img-item-overlay d-flex flex-column justify-content-center align-items-center">
                                        <h3><a asp-controller="Home" asp-action="Detail" asp-route-parkCode="@Model[i].ParkCode">@Model[i].ParkName</a></h3>
                                        <p class="overlay-discription">@Model[i].ParkDescription</p>
                                        <button class="btn welcome-btn gallery-btn">view details</button>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>


